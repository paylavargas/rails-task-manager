<!-- app/views/restaurants/_form.html.erb -->
<div class="container">
  <h1 class="text-center my-5">Edit Task</h1>
  <%= simple_form_for(@task) do |f| %>
    <%= f.input :title %>
    <%= f.input :details %>
    <%= f.input :completed, as: :radio_buttons, wrapper: :vertical_collection_inline %>
    <%= f.submit class: "btn-primary" %>
  <% end %>
</div>
